<link rel="stylesheet" href="{{ 'about-us.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'about-us-mobile.css' | asset_url }}" media="print" onload="this.media='all'">

<section class="about-us">
  <div class="about-us__container _container">
    <p class="about-us__subtext">
      {{ section.settings.subtext }}
    </p>
    <h2 class="about-us__heading">
      {{ section.settings.heading }}
    </h2>
    <div class="about-us__footer">
      <div class="about-us__image">
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="">
      </div>
      <div class="about-us__content">
        <p class="about-us__text">
          {{ section.settings.text }}
        </p>
        <a href="{{ section.settings.button_link }}" class="button button_animated about-us__button">
          <p class="button__name">
            {{ section.settings.button_text }}
          </p>
          <div class="button__jumper"></div>
          <div class="button__icon">
            <img src="{{ 'button-icon.svg' | asset_url }}" alt="">
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Us Section",
  "settings": [
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Who is behind Emberix?"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Hello there, we are <span>enthusiastic team</span> of mushroom experts."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Think of us as the love child of a nature. Weâ€™re passionate about bringing the power of nature to your doorstep, minus the bug bites and unpredictable weather."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "About us"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "About Us Section"
    }
  ]
}
{% endschema %}
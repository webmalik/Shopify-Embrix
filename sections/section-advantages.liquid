<link rel="stylesheet" href="{{ 'advantages.css' | asset_url }}" media="print" onload="this.media='all'">


<section class="advantages">
  <div class="advantages__container _container">
    <h2 class="advantages__persent {% if section.settings.button_hidden %} mt40{% endif %}">{{ section.settings.persent }}</h2>
    <h3 class="advantages__heading">{{ section.settings.heading }}</h3>
    <p class="advantages__text">
      {{ section.settings.text }}
    </p>
	
		<a href="{{ section.settings.button_link }}" {% if section.settings.button_hidden == true %}style="display:none;"{% endif %} class="advantages__button common-button button_animated">
			<span class="button__name">
				{{ section.settings.button_text }}
			</span>
			<div class="button__icon">
				<img src="{{ 'button-icon.svg' | asset_url }}" alt="">
			</div>
		</a>
	
    <div class="advantages__items">
      {% for block in section.blocks %}
        {% if block.type == 'advantage_item' %}
          <div class="advantages__item">
            <div class="advantages__icon">
              <img src="{{ block.settings.icon | img_url: 'small' }}" alt="">
            </div>
            <span>{{ block.settings.text }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Advantages Section",
  "settings": [
    {
      "type": "checkbox",
      "id": "button_hidden",
      "label": "Button Hidden",
	  "default": false
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "persent",
      "label": "Percentage Text",
      "default": "100%"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "safe and organic"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Our mushrooms are as organic as grandmaâ€™s home-baked cookies. Grown without any nasty chemicals, we ensure that each mushroom is rigorously tested and safe for consumption."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "learn more"
    },
    {
      "type": "image_picker",
      "id": "button_icon",
      "label": "Button Icon"
    }
  ],
  "blocks": [
    {
      "type": "advantage_item",
      "name": "Advantage Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Item Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Item Text",
          "default": "Cruelty free"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Advantages Section"
    }
  ]
}
{% endschema %}
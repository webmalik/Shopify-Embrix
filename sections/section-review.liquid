<link rel="stylesheet" href="{{ 'reviews.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'reviews-mobile.css' | asset_url }}" media="print" onload="this.media='all'">
<script src="{{ 'reviews-swiper.js' | asset_url }}" defer="defer"></script>
<section class="reviews">
  <img src="{{ 'bg-1.svg' | asset_url }}" alt="" class="reviews__bg-image reviews__bg-image_1">
  <img src="{{ 'bg-2.svg' | asset_url }}" alt="" class="reviews__bg-image reviews__bg-image_2">
  <img src="{{ 'bg-3.svg' | asset_url }}" alt="" class="reviews__bg-image reviews__bg-image_3">
  <img src="{{ 'bg-4.svg' | asset_url }}" alt="" class="reviews__bg-image reviews__bg-image_4">
  <img src="{{ 'bg-5.svg' | asset_url }}" alt="" class="reviews__bg-image reviews__bg-image_5">
  <div class="reviews__container _container">
    <h2 class="reviews__heading">
      {{ section.settings.heading }}
    </h2>
    <div class="reviews__swiper-wrapper">
      <div class="swiper reviews__swiper">
        <div class="swiper-wrapper reviews__swiper-wrapper">
          {% for block in section.blocks %}
            {% if block.type == 'review_item' %}
              <div class="swiper-slide reviews__swiper-slide">
                <img src="{{ 'quotes.svg' | asset_url }}" class="review__quotes" alt="">
                <div class="reviews__product">
                  <img src="{{ 'product-icon.svg' | asset_url }}" alt="">
                  <p>{{ block.settings.product_name }}</p>
                </div>
                <h3 class="reviews__title">
                  {{ block.settings.title }}
                </h3>
                <p class="reviews__text">
                  {{ block.settings.text }}
                </p>
                <div class="reviews__person">
                  <img src="{{ block.settings.avatar | img_url: 'master' }}" alt="" class="reviews__avatar">
                  <span class="reviews__name">{{ block.settings.name }}</span>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      <div class="reviews__swiper-button-prev slider-button reviews__swiper-button">
        <img src="{{ 'arrow-black.svg' | asset_url }}" alt="">
        <img src="{{ 'arrow-white.svg' | asset_url }}" alt="">
      </div>
      <div class="reviews__swiper-button-next slider-button reviews__swiper-button">
        <img src="{{ 'arrow-black.svg' | asset_url }}" alt="">
        <img src="{{ 'arrow-white.svg' | asset_url }}" alt="">
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Reviews Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How people feel about <span>the product</span>?"
    }
  ],
  "blocks": [
    {
      "type": "review_item",
      "name": "Review Item",
      "settings": [
        {
          "type": "text",
          "id": "product_name",
          "label": "Product Name",
          "default": "Product: Lionâ€™s mane"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Review Title",
          "default": "I've been using these for a week now and I feel way more focused at work."
        },
        {
          "type": "text",
          "id": "text",
          "label": "Review Text",
          "default": "I don't get as tired or irritable anymore either. No more brain fog since I started, so I highly recommend them."
        },
        {
          "type": "image_picker",
          "id": "avatar",
          "label": "Person Avatar"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Person Name",
          "default": "Richard Thompson"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews Section"
    }
  ]
}
{% endschema %}
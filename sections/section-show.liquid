<link rel="stylesheet" href="{{ 'show.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'show-mobile.css' | asset_url }}" media="print" onload="this.media='all'">

<section class="show">
  <div class="_container show__container">
    <h2 class="show__heading">
      {{ section.settings.section_heading }}
    </h2>
    <div class="show__items">
      {% for block in section.blocks %}
        {% if block.type == 'show_item' %}
          <div class="show__item">
            <h3 class="show__title">
              {{ block.settings.item_title }}
            </h3>
            <img src="{{ block.settings.item_image | img_url: 'master' }}" alt="" class="show__image">
            <p class="show__text">
              {{ block.settings.item_text }}
            </p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Show Section",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",

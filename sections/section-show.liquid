      "type": "show_item",
      "name": "Show Item",
      "settings": [
        {
          "type": "text",
          "id": "item_title",
          "label": "Item Title",
          "default": "THE"
        },
        {
          "type": "image_picker",
          "id": "item_image",
      "label": "Item Image"
        },
        {
          "type": "text",
          "id": "item_text",
